<div class="container">
  <h1>Here is the list of restaurants</h1>
  <div class="cards">
    <% @restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant.id) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= restaurant.name %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary" %>
</div>
